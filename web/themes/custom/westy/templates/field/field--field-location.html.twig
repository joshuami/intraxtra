{% embed "@westy/field/field.html.twig" %}
{% block label %}
{% if items|length > 1 %}
<h2 id="location-section" class="field__label">Locations</h2>
{% else %}
<h2 id="location-section" class="field__label">Location</h2>
{% endif %}
{% endblock %}
{% block content %}
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-3">
  {% for item in items %}
  <div class="col">
    {{ item.content }}
  </div>
  {% endfor %}
</div>
<p class="more-link"><a href="/locations">View all county locations<i class="gg-arrow-right ms-2"></i></a></p>
{% endblock %}
{% endembed %}
