{% 
  set page_main_classes = [
  'py-5'
  ]|merge(page_main_utility_classes ? page_main_utility_classes : []) 
%}

<main{{ content_attributes.addClass(page_main_classes) }}>
  {% if page.header %}
    <header class="page__header mb-3">
      <div class="container">
        {% block page_header %}
          {{ page.header }}
        {% endblock %}
      </div>
    </header>
  {% endif %}
  <div class="container">
    <div class="row">
      {% if page.content %}
        <div class="page__content col-md-12 col-lg-8" id="main-content">
            {% block page_inner_content %}
              {{ page.content }}
            {% endblock %}
        </div>
      {% endif %}
      {% if page.sidebar %}
        <div class="page__sidebar col-md-12 col-lg-4">
            {% block page_sidebar_content %}
              {{ page.sidebar }}
            {% endblock %}
        </div>
      {% endif %}
    </div>
  </div>
</main>